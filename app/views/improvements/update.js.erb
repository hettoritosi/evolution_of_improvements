
<%if params[:improvement][:select_controller] == 'show' %>
    $("#improvements").html("<%= escape_javascript(render :partial => "users/show", :locals => { :improvements => @improvements}) %>");

<%elsif params[:improvement][:select_controller] == 'graveyard'%>
    $("#improvements_graveyard").html("<%= escape_javascript(render :partial => "graveyard/index", :locals => { :improvements => @improvements_graveyard}) %>");

<%elsif params[:improvement][:select_controller] == 'index'%>
    $("#improvements_index").html("<%= escape_javascript(render :partial => "improvements/index", :locals => { :improvements => @improvements_index}) %>")
<%end%>