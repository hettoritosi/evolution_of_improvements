<br>
<div class="alert alert-info">
  <h3>
<%= image_tag "icon-studiare.png" %>
<%= @improvement.title %>
</h3>
<hr>
<p>
  <%= @improvement.content %>
</p>

<br>
  <hr>
<p>
  <strong>Categoria:</strong>
  <%= @improvement.category %>
</p>

<p>
  <strong>Criado por:</strong>
  <%= @improvement.name %>
</p>

  <p>
    <strong>Status:</strong>
  <%- if @improvement.status.name == "Finalizado" %>
      <td><font color="#00FF00"><%= @improvement.status.name %></font></td>
  <% end %>
  <%- if @improvement.status.name == "Em Progresso" %>
      <td><font color="#00BFFF"><%= @improvement.status.name %></font></td>
  <% end %>
  <%- if @improvement.status.name == "Inicializado" %>
      <td><font color="#FF0000"><%= @improvement.status.name %></font></td>
  <% end %>
  </p>
  <p>
    <strong>Respons√°vel:</strong>
    <%= @improvement.responsible.name %>

  <p>
    <strong>Criado em:</strong>
    <%= @improvement.created_at.to_datetime.strftime("%m/%d/%Y")%>

  <p>
    <strong>Atualizado em:</strong>
    <%= @improvement.updated_at.to_datetime.strftime("%m/%d/%Y")%>
</div>

<br>


<%= comments @improvement %>

<br>
<br>
<br>
<br>
<%= render partial: "comments/new_comment"%>

<%- if current_user.id == @improvement.user_id || current_user.admin? %>
    <br>
    <%= link_to 'Editar', edit_improvement_path(@improvement), class: "btn btn-primary btn-go" %>
    &nbsp;
    <%= link_to 'Deletar', @improvement, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-go" %>
<%-end%>